<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#596577"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_login_sm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#63000000"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"

            android:src="@drawable/logoapp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:text="MI BANCO"
            android:textColor="#9EFFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"

            android:text="LOGIN"
            android:textAlignment="center"
            android:textColor="#9EFFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_id"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/inputs"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawableTint="#9EFFFFFF"
            android:drawingCacheQuality="high"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:hint="Ingrese su usuario"
            android:includeFontPadding="false"
            android:inputType="text"
            android:padding="5sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#9EFFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_contrasena"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/inputs"


            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawableTint="#9EFFFFFF"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:hint="Ingrese su contraseña"
            android:inputType="textPassword"
            android:padding="10sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#9EFFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="#D800D4BB"
            android:backgroundTintMode="screen"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:gravity="center"
            android:onClick="Ingresar"
            android:shadowRadius="6"
            android:text="Ingresar"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:backgroundTint="#D800D4BB"
            android:backgroundTintMode="screen"
            android:drawableRight="@drawable/ic_baseline_cloud_circle_24"
            android:gravity="center"
            android:onClick="CrearCuenta"
            android:shadowRadius="6"
            android:text="Crea tu cuenta"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Olvidaste tu contraseña?"
            android:textColor="#9EFFFFFF"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>